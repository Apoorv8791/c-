#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main()
{
string str="apoorvsaxena";
int max=1,temp=0;
char ch;
for (int i=0;i<str.size();i++)
{
    for (int j=0;j<str.size()+1;j++)
    {
        if(str[i]==str[j+1])
        {
            max++;
        }
        
        if(max>temp)
        {
            temp=max;
            ch=str[i];
        }

    }
            max=0;
}
cout<<temp<<" "<<ch;

    return 0;
}
